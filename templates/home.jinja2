{% extends 'base.jinja2' %}

{% block content %}
<h1> Welcome to the blog</h1>
<h4>Posts</h4>

<ul>
	{% for post_id, post in posts.items() %}
		<li><a href="{{ url_for('post', post_id=post_id) }}">{{ post['title'] }}</a></li>
	{% endfor %}
</ul>

<a href="{{ url_for('create') }}">Create</a>
{% endblock %}